PARSER_BEGIN(Eg2)
// added to the original JJTree example
package examples.java.ex2jtb;
// added from JJTree example
import examples.java.ex2jtb.visitor.*;

/** An Arithmetic Grammar. */
public class Eg2
{
  /** Main entry point. */
  public static void main(String args [])
  {
    System.err.flush();
    System.out.println("Reading from standard input (JTB version)...");
    Eg2 t = new Eg2(System.in);
    try
    {
      // modified from JJTree example for return type is the production name
      // note: visitor must be instantiated now because it is referenced in MyID
      DumpVisitor v = new DumpVisitor();
      // SimpleNode n = t.Start();
      ASTStart n = t.ASTStart();
      // modified from JJTree example for using a custom visitor
      // n.dump("");
      n.accept(v, "");
      System.out.println("Thank you.");
      System.exit(0);
    }
    catch (Exception e)
    {
      System.out.flush();
      System.err.println("Oops.");
      System.err.println(e.getMessage());
      e.printStackTrace();
      System.exit(-1);
    }
  }
}

PARSER_END(Eg2)

SKIP :
{
  " "
| "\t"
| "\n"
| "\r"
| < "//" (~[ "\n", "\r" ])*
    (
      "\n"
    | "\r"
    | "\r\n"
    ) >
| < "/*" (~[ "*" ])* "*"
    (
      ~[ "/" ] (~[ "*" ])* "*"
    )*
    "/" >
}

TOKEN : /* LITERALS */
{
  < INTEGER_LITERAL :
    < DECIMAL_LITERAL > ([ "l", "L" ])?
  | < HEX_LITERAL > ([ "l", "L" ])?
  | < OCTAL_LITERAL > ([ "l", "L" ])? 
  >
| 
  < #DECIMAL_LITERAL : [ "1"-"9" ] ([ "0"-"9" ])* >
| 
  < #HEX_LITERAL : "0" [ "x", "X" ] ([ "0"-"9", "a"-"f", "A"-"F" ])+ >
| 
  < #OCTAL_LITERAL : "0" ([ "0"-"7" ])* >
}

TOKEN : /* IDENTIFIERS */
{
  < IDENTIFIER :
    < LETTER >
    (
      < LETTER >
    | < DIGIT >
    )* >
| 
  < #LETTER : [ "_", "a"-"z", "A"-"Z" ] >
| 
  < #DIGIT : [ "0"-"9" ] >
}

/** Main production. */
// modified from JJTree example as no need here for a specific return type
//ASTStart Start() : {}
void Start() :
{}
{
  Expression() ";"
  // removed from JJTree, automatically done in JTB
  //  { return jjtThis; }
}

/** An Expression. */
// modified from the JJTree example, syntax is different for not creating the node
//void Expression() #void : {}
void Expression() :
{}
{
  AdditiveExpression()
}

/** An Additive Expression. */
// modified from the JJTree example: node created for being able to create nodes under
//void AdditiveExpression() #void : {}
void AdditiveExpression() :
{}
{
  //  (
  MultiplicativeExpression()
  (
    (
      "+"
    | "-"
    )
    MultiplicativeExpression()
  )*
  //  )
  // removed from the JJTree example, no equivalent in JTB, done in visitor
  //   #Add(>1)
}

/** A Multiplicative Expression. */
// modified from the JJTree example: node created for being able to create nodes under
//void MultiplicativeExpression() #void : {}
void MultiplicativeExpression() :
{}
{
  //  (
  UnaryExpression()
  (
    (
      "*"
    | "/"
    | "%"
    )
    UnaryExpression()
  )*
  //  )
  // removed from the JJTree example, no equivalent in JTB, done in visitor
  //   #Mult(>1)
}

/** A Unary Expression. */
void UnaryExpression() :
{}
{
  "(" Expression() ")"
| MyID()
  // Added to the JJTree example to check proper handling of actions on the node in the last block
  {
    // modified from the JJTree example to adapt to JTB
    //    ASTMyID m = (ASTMyID) ( (ASTUnaryExpression) jjtree.peekNode() ).jjtGetChild(0);
    //    m.setName("reset");
    // one finds in the jj file which variable refers to the MyID node
    n5.f0.image = "reset";
  }
| Integer()
}

/** An Identifier. */
void MyID() /* #MyID */ :
{
  Token t = null;
}
{
  t = < IDENTIFIER >
  {
    // modified from the JJTree example to adapt to JTB
    // slightly modified from the original example
    //    jjtThis.setName(t.image + " modified");
    n0.image = t.image + " modified";
  }
  jc_0()
}

/** An Integer. */
void Integer() :
{}
{
  < INTEGER_LITERAL >
  jc_1()
}

